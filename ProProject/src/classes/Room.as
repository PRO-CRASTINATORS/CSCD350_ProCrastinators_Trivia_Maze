package  classes{	import flash.display.MovieClip;	import com.natejc.utils.StageRef;	/**	 * ...	 * @author ...	 */	public class Room extends MovieClip	{		private var dNorth	:Door;		private var dSouth	:Door;		private var dEast 	:Door;		private var dWest	:Door;		private var bItem	:Boolean = false;		private var mcRoom	:MovieClip;		private var sType	:String;			public function Room($type:String) 		{			this.dNorth = null;			this.dSouth = null;			this.dEast = null;			this.dWest = null;						this.sType = $type;			this.bItem = this.itemGen();		}				public function addRoomToStage()		{			if(this.sType == "zelda")				StageRef.stage.addChild(new ZeldaRoom());			if(this.sType == "mario")				StageRef.stage.addChild(new MarioRoom());			/*if($type == "startrek");				StageRef.stage.addChild(new StarTrekRoom());*/			this.addRoomDoors();		}				private function addRoomDoors():void		{			if(dNorth != null)				dNorth.addDoorToStage();			if(dSouth != null)				dSouth.addDoorToStage();			if(dWest != null)				dWest.addDoorToStage();			if(dEast != null)				dEast.addDoorToStage();		}		public function getItem():Boolean		{			return this.bItem;		}		public function setNorth($n:Door) 		{			this.dNorth = $n;		}		public function setSouth($s:Door) 		{			this.dSouth = $s;		}		public function setEast($e:Door) 		{			this.dEast = $e;		}		public function setWest($w:Door) 		{			this.dWest = $w;		}				private function itemGen():Boolean 		{			var rand:int = Math.floor(Math.random() * (10 - 0 + 1) + 0)			//Random rand = new Random();			if (rand < 3)				return true;			return false;		}	}}