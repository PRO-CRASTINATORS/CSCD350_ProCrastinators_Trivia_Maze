package  classes{	import flash.display.MovieClip;	import com.natejc.utils.StageRef;	/**	 * ...	 * @author ...	 */	public class Door extends MovieClip	{		//private var _que		:QandA;		private var _locked 	:int;		private var _sType		:String;				public function Door($type:String) 		{			//this._que = QuestionFactory.getQandA();			this._sType = $type;			//this.addDoor(this._sType);			this._locked = 0;		}		public function addDoorToStage()		{			if(this._sType == "north")				StageRef.stage.addChild(new zNorthDoor());			if(this._sType == "south")				StageRef.stage.addChild(new zSouthDoor());			if(this._sType == "west")				StageRef.stage.addChild(new zWestDoor());			if(this._sType == "east")				StageRef.stage.addChild(new zEastDoor());		}			}}