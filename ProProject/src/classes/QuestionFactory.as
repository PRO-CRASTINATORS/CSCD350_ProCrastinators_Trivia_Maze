package  classes{	import flash.display.MovieClip;	import classes.TriviaItem;	public class QuestionFactory extends MovieClip	{		private var questions:Array;		public function QuestionFactory(dbh:DatabaseHandler) 		{			questions = dbh.getQuestions();		}				public function getTriviaItem()		{			var index:int = Math.random() * questions.length;						var trivia:TriviaItem = questions[index];						questions = questions.splice(index, 1);						return trivia;		}			}}